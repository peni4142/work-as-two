{
	"name": "work-as-two",
	"displayName": "work-as-two",
	"author": {
		"name": "peni4142"
	},
	"description": "Opens the associated file for simultaneous work on two files.",
	"version": "0.1.1",
	"icon": "work-as-two.jpg",
	"license": "GPL-3.0-or-later",
	"publisher": "peni4142",
	"keywords": [
		"tdd",
		"testdriven",
		"web",
		"html",
		"css",
		"split",
		"screen",
		"splitscreen"
	],
	"repository": {
		"url": "https://github.com/peni4142/work-as-two"
	},
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"properties":{		
			"work-as-two.leftEscapedRegex": {
				"description":"example: ^(.*)(\\.ts)$",
				"type": [
					"string"
				],
				"default" : "^(.*)(\\.ts)$",
				"scope":"resource"
			},
			"work-as-two.leftTransformToRight":{ 
				"description":"example: $1.test$2",
				"type": [
					"string"
				],
				"default" : "$1.test$2",
				"scope":"resource"
			},
			"work-as-two.rightEscapedRegex": {
				"description":"example: ^(.*)(\\.ts)$",
				"type": [
					"string"
				],
				"default" : "^(.*)(\\.ts)$",
				"scope":"resource"
			},
			"work-as-two.rightTransformToLeft":{ 
				"description":"example: ^(.*)\\.test(\\.ts)$",
				"type": [
					"string"
				],
				"default" : "$1$2",
				"scope":"resource"
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run build",
		"compile": "webpack --mode development",
		"test:compile": "tsc -p ./",
		"watch": "webpack --mode development -w",
		"pretestVscode": "npm run compile",
		"test": "npm run unit-test && npm run integration-test",
		"unit-test": "mocha -r ts-node/register src/logic/**/*.unit-test.ts -u tdd",
		"integration-test": "tsc -p ./&& npm run compile && node ./out/integration/integrationtests/testRunner.js",
		"build": "webpack --mode production"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"glob": "^7.1.5",
		"mocha": "^7.0.1",
		"ts-loader": "^6.2.1",
		"ts-node": "^8.6.2",
		"tslint": "^5.20.0",
		"typescript": "^3.6.4",
		"vscode-test": "^1.2.2",
		"webpack": "^4.41.5",
		"webpack-cli": "^3.3.10"
	}
}
